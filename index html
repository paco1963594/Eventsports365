  <script>
    const translations = {
      "ar": {
        button: "احجز تذكرتك الآن",
        message: "احجز تذكرتك في جميع الملتقيات الرياضية والموسيقية وغيرها حالاً قبل فوات الأوان"
      },
      "en": {
        button: "Book Your Ticket Now",
        message: "Book your ticket for all sports and music events before it's too late!"
      },
      "fr": {
        button: "Réservez votre billet maintenant",
        message: "Réservez votre billet pour tous les événements sportifs et musicaux dès maintenant !"
      },
      "es": {
        button: "Reserva tu entrada ahora",
        message: "¡Reserva tu entrada para todos los eventos deportivos y musicales ya!"
      },
      "de": {
        button: "Buche jetzt dein Ticket",
        message: "Buche dein Ticket für alle Sport- und Musikveranstaltungen jetzt!"
      }
    };

    function detectLanguage() {
      const lang = navigator.language.slice(0, 2);
      return translations[lang] ? lang : "en";
    }

    window.onload = () => {
      const lang = detectLanguage();
      document.getElementById("bookBtn").textContent = translations[lang].button;
      document.getElementById("messageBox").textContent = translations[lang].message;
    };
  </script>
